{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",
    "lib": ["esnext"],

    /* Modules */
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
			"@baby": ["./src/examples/baby"]
		},
    "typeRoots": [
			"node_modules/@types"
		],
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "./dist",
    "removeComments": true,
    "newLine": "lf",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
